{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Mesh Organiser",
	"version": "1.9.0",
	"identifier": "com.mesh-organiser.app",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:9435",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../build"
	},
	"app": {
		"windows": [
			{
				"title": "Mesh Organiser",
				"width": 1280,
				"height": 800,
				"zoomHotkeysEnabled": true
			}
		],
		"security": {
			"csp": "default-src 'none' ipc: http://ipc.localhost; img-src 'self' * asset: http://asset.localhost; style-src 'self' 'unsafe-inline';",
			"assetProtocol": {
				"enable": true,
				"scope": ["$DATA/*", "$DATA/**"]
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"createUpdaterArtifacts": true,
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"macOS": {
			"signingIdentity": "-"
		}
	},
	"plugins": {
		"updater": {
			"pubkey": "RWQbdCM01o6Nk+G0sx/c6k6oeh2mLfqYfYa/45aoKEjU38HGDfLcPkVe",
			"endpoints": [
				"https://github.com/suchmememanyskill/mesh-organiser/releases/latest/download/latest.json"
			]
		}
	}
}
